{
  "compilerOptions": {
    "target": "es2019",
    "module": "commonjs",
    "moduleResolution": "node",
    "sourceMap": true,
    "experimentalDecorators": true,
    "checkJs": true,
    "allowJs": true,
    "noImplicitAny": true,
    "alwaysStrict": true,
    "strictNullChecks": true,
    "lib": ["es2015", "es2016", "es2017", "es2018", "es2019", "es2020", "dom"]
  },
  "exclude": ["node_modules"]
}
